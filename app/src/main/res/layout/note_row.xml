<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="25"
    android:weightSum="90"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageNote"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cost"
        android:id="@+id/priceView"
        android:layout_gravity="center_vertical"
        android:layout_alignBottom="@+id/imageNote"
        android:layout_toRightOf="@+id/imageNote"
        android:layout_below="@+id/itemNameView"
        android:layout_alignRight="@+id/itemNameView"
        android:layout_alignEnd="@+id/itemNameView" />

    <TextView
        android:id="@+id/itemNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Item"
        android:layout_weight="1.67"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageNote"
        android:layout_toEndOf="@+id/imageNote" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Item Details"
        android:id="@+id/viewItem"
        android:layout_gravity="center_vertical"

        android:layout_below="@+id/imageNote"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>